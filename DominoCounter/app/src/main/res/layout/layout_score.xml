<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryLight">

    <Button
        android:id="@+id/subBtn2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:background="@drawable/game_text_view_bg"
        app:layout_constraintBottom_toBottomOf="@+id/subBtn1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/subBtn1"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/tvPlayerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="24dp"
        android:text="TextView"
        android:textColor="@color/textOnP"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tvPlayerScore"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/addBtn1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/game_text_view_bg"
        app:layout_constraintBottom_toBottomOf="@+id/tvPlayerName"
        app:layout_constraintEnd_toStartOf="@+id/addBtn2"
        app:layout_constraintTop_toTopOf="@+id/tvPlayerName"
        app:layout_constraintVertical_bias="0.619" />

    <Button
        android:id="@+id/addBtn2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:background="@drawable/game_text_view_bg"
        app:layout_constraintBottom_toBottomOf="@+id/addBtn1"
        app:layout_constraintEnd_toStartOf="@+id/subBtn1"
        app:layout_constraintTop_toTopOf="@+id/addBtn1" />

    <Button
        android:id="@+id/subBtn1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/game_text_view_bg"
        app:layout_constraintBottom_toBottomOf="@+id/addBtn2"
        app:layout_constraintEnd_toStartOf="@+id/subBtn2"
        app:layout_constraintTop_toTopOf="@+id/addBtn2"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tvPlayerScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text="TextView"
        android:textColor="@color/textOnP"
        app:layout_constraintBottom_toBottomOf="@+id/tvPlayerName"
        app:layout_constraintEnd_toStartOf="@+id/addBtn1"
        app:layout_constraintTop_toTopOf="@+id/tvPlayerName" />
</androidx.constraintlayout.widget.ConstraintLayout>